extends layout

block layout-content
	div.View.SignUpView
		h1.Banner SIGN UP
		div.Login
			div.FormLogin
				form(action="/signup",method="POST")
					div.InputUser
						label(for="firstName") First Name
						input#firstName(type="text",name='firstName')
					div.InputUser
						label(for="lastName") Last Name
						input#lastName(type="text",name='lastName')
					div.InputUser
						label(for="email") Email
						input#email(type="email",name="email",placeholder="nguyenvana@gmail.com")
					div.InputUser
						label(for="password") Password
						input#pass(type="password",name="password")
					div.InputUser
						input.NavButton#signup(type="submit",value="Sign up")
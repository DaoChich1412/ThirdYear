extends layout

block layout-style
	link(rel="stylesheet" href="css/style2.css")
block layout-content
	div.View
		div.NavBar
			a.Page
				h2 h_
			a.Page#Notifi(title="Notification",href="/notifi")
			a.Page.Active#Mess(title="Message",href="/chat")
			a.Page#Person(title="Profile",href="/profile")
		div.ListOption
			div.Account
				div.Avatar
				h2#Nickname #{nickname}
			div.Option
				h3#ListFriend Friend list
				div.List#FriendList
					
				h3#ListGroup Group list
				div.List#GroupList.Hide
					
		div.Detail
			div.ChatRoom
				h3.ChatRoomName
				div.Messages 
				div.MessInput
					textarea#EnterMess(rows="3",type="text",name="EnterMess")
					button.Buttons#SendMess Send
				
block layout-script
	script(src="scripts/libs/socket.io.js")
	script(src="scripts/chat.js")